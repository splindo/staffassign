@model RoomAssignment.Models.Nurse

<div class="wrapper">
    <div class="wrapperNest">
        @{
            ViewBag.Title = "Delete Entry";
        }
        <img src="~/Content/SEH horizontal logo.JPG" class="horizontalLogo" alt="" />
        <h4>Delete Entry?</h4>
        <div class="bgbody">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="bgbodyNested">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <script>
                        window.onload = function () {
                            if (document.location.search.length == 0) {
                                window.location = window.location.pathname + "?Floor=" + localStorage.getItem('todoDataFloor');
                            }
                        }
                    </script>
                    @{
                        if (Model.Position == "Nurse" || Model.Position == "PCA")
                        {
                            <div class="textboxHolderLeft">
                                <div class="listLeft">
                                    Position<br />
                                    Floor<br />
                                    Name<br />
                                    Rooms<br />
                                    Phone<br />
                                </div>
                            </div>
                            <div class="textboxHolderRight">
                                <div class="listRight">
                                    @Html.EditorFor(model => model.Position, new { htmlattributes = new { @Value = Model.Position, @style = "height:40px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @Value = Model.Location, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @Value = Model.Name, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Rooms, new { htmlAttributes = new { @Value = Model.Rooms, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Rooms, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @Value = Model.Phone, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    <br />
                                </div>
                            </div>
                        }
                        else if (Model.Position == "Charge Nurse" || Model.Position == "Respiratory Therapy")
                        {
                            <div class="textboxHolderLeft">
                                <div class="listLeft">
                                    Position<br />
                                    Floor<br />
                                    Name<br />
                                    Phone<br />
                                </div>
                            </div>
                            <div class="textboxHolderRight">
                                <div class="listRight">
                                    @Html.EditorFor(model => model.Position, new { htmlattributes = new { @Value = Model.Position, @style = "height:40px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @Value = Model.Location, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @Value = Model.Name, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    <br />
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @Value = Model.Phone, @style = "display:inline-block;height:32px;background-color:#D9E1F2;border:0;font-size:25px", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    <br />
                                </div>
                            </div>
                        }
                    }
                    <div class="buttonHolder">
                        <input class="submitAddition" type="submit" value="Delete" />
                    </div>
                </div>
                        }
            <h4>
                @Html.ActionLink("Back to list", "Index", null, new { @style = "color:white;font-family: Lucida 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:35px" })
            </h4>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
